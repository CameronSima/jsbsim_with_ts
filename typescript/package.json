{
  "name": "jsbsim-js",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript bindings for JSBSim flight dynamics model",
  "main": "dist/jsbsim.js",
  "types": "dist/jsbsim.d.ts",
  "scripts": {
    "build:wasm": "emcmake cmake -B build -DCMAKE_BUILD_TYPE=Release && emmake make -C build -j4",
    "build:bindings": "node scripts/build-bindings.js",
    "build": "npm run build:wasm && npm run build:bindings",
    "test": "jest",
    "clean": "rm -rf build dist"
  },
  "keywords": [
    "jsbsim",
    "flight-simulation",
    "aerospace",
    "webassembly",
    "typescript"
  ],
  "author": "JSBSim Development Team",
  "license": "LGPL-2.1",
  "devDependencies": {
    "@types/emscripten": "^1.39.7",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JSBSim-Team/jsbsim.git"
  },
  "bugs": {
    "url": "https://github.com/JSBSim-Team/jsbsim/issues"
  },
  "homepage": "https://jsbsim.sourceforge.io/"
}